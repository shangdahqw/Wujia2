<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        stv:sDividerLineType="none"
        />
    <com.allen.library.SuperTextView
        android:id="@+id/alipay_stv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftBottomTextString="取消"
        stv:sLeftBottomTextSize="16dp"
        stv:sCenterBottomTextString="设置用户名"
        stv:sCenterBottomTextColor="@android:color/black"
        stv:sCenterBottomTextSize="20sp"
        stv:sCenterViewGravity="center"
        stv:sDividerLineType="none"
        stv:sLeftViewMarginLeft="20dp"
        />

    <com.example.wujia2.utils.ClearEditText
        android:id="@+id/et_clear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:background="@drawable/clear_edittext"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:text="完成"
        android:textColor="@color/colorPrimary"/>


</LinearLayout>